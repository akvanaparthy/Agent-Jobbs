# ========================================
# SEARCH FILTER CONFIGURATION
# ========================================
# Add these to your .env file for advanced filtering

# Search radius in miles (default: 25)
# Options: 5, 10, 25, 50, 5000 (any distance)
SEARCH_RADIUS=25

# Remote work filter (default: all)
# Options: all, no_remote (in-person only), only_remote (remote only)
REMOTE_FILTER=all

# Experience level filter (default: all)
# Options: all, senior, mid, junior, no_experience
EXPERIENCE_LEVEL=all

# Date posted filter (default: past_week)
# Options: past_day, past_week, past_month, any_time
DATE_FILTER=past_week
